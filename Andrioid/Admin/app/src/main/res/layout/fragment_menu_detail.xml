<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/menuImage"
        android:background="@color/coffee_menu_back"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitCenter"
        tools:src="@drawable/coffee1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtMenuName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="40dp"
            style="@style/Text.Title"
            tools:text="아메리카노"
            android:layout_marginBottom="30dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가격"
                android:textSize="30dp"
                android:layout_weight="1"
                style="@style/Text.Regular"/>
            <TextView
                android:id="@+id/txtMenuPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                tools:text="4,000원"
                android:textSize="30dp"
                style="@style/Text.light"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/order_quantity_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수량"
                android:textSize="30dp"
                android:layout_weight="1"
                style="@style/Text.Regular"/>
            <ImageButton
                android:id="@+id/btnMinusCount"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:backgroundTint="@color/coffee_point_red"
                android:background="@drawable/minus" />

            <TextView
                android:id="@+id/textMenuCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="30dp"
                android:layout_marginHorizontal="10dp"
                style="@style/Text.light"/>

            <ImageButton
                android:id="@+id/btnAddCount"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:backgroundTint="@color/coffee_point_red"
                android:background="@drawable/add" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backgroundTint = "@null"
        android:background="@color/coffee_menu_back"
        android:paddingHorizontal="5dp"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="평점"
            android:textSize="30dp"
            android:layout_marginRight="10dp"
            style="@style/Text.Title"/>

        <TextView
            android:id="@+id/txtRating"
            style="@style/Text.light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            tools:text="4.4 점"
            android:textSize="30dp" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:numStars="5"
            android:rating="0.0"
            tools:rating="4.4" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/add_comment_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp">

        <EditText
            android:id="@+id/et_comment"
            style="@style/Text.Title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/button_non_color" />

        <Button
            android:id="@+id/btnCreateComment"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="등록"
            app:backgroundTint="@null"
            android:background="@drawable/button_go_order"
            style="@style/Text.Title"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewMenuDetail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="5dp"
            />
    </ScrollView>


    <Button
        android:id="@+id/btnAddList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/coffee_point_red"
        android:text="담기"/>

</LinearLayout>