<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/textview_regular"
    android:paddingLeft="0dp"
    android:layout_marginRight="5dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0번주문"
        android:textColor="@color/coffee_point_red"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="17sp"
        android:layout_marginBottom="5dp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/coffee_menu_back">
        <ImageView
            android:id="@+id/menuImage"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/coffee1" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textMenuNames"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="아메리카노 외 3잔"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        style="@style/Text.Regular"/>
    <TextView
        android:id="@+id/textMenuPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25,000원"
        android:textSize="15dp"
        style="@style/Text.Regular"/>
    <TextView
        android:id="@+id/textMenuDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021.05.06"
        android:textSize="15dp"
        style="@style/Text.Regular"/>
    <ImageView
        android:id="@+id/btnGoOrder"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/Text.Regular"
        android:src="@drawable/shopping_cart"
        android:visibility="gone"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/coffee_brown"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제작 시작"
            android:fontFamily="sans-serif-medium"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"
            />
    </androidx.cardview.widget.CardView>

</LinearLayout>