<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- name space는 BookRepo의 fully qualified name으로 설정한다. -->
<mapper namespace="com.ssafy.cafe.model.dao.NoteDao">
	<insert id="insert" parameterType="Note">
		INSERT INTO t_note (title, content)
		VALUES (#{title}, #{content})
	</insert>
	
	<delete id="delete" parameterType="int">
		DELETE FROM t_note
		WHERE id = #{id}
	</delete>
	
	<select id="select" parameterType="int" resultType="Note">
		SELECT * FROM t_note
		WHERE id = #{id}
	</select>
	
	<select id="selectAll" resultType="Note">
		SELECT * FROM t_note
	</select>
	
</mapper>